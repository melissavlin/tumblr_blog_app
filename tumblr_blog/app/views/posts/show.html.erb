<p><%= @post.body %></p>


<!-- comments form -->
<p> create new comment:</p>
<%= form_for(@new_comment, url: post_comments_path(@post)) do |f| %>
	<%= f.label :body %><br />
	<%= f.text_area :body %><br />
	<%= f.submit :comment %>
<% end %> 

<!-- list of comments -->
<p> Comments </p>
<ul>
	<% @post.comments.each do |comment| %>
		<li><%= comment.body %> 

		<% if current_user == @user %>
		| (<%= link_to "DELETE", post_comment_path(comment), method: "delete" %>)</li>
		<% end %>
	<% end %>
</ul>
