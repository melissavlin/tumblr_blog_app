
<h1>Sign Up</h1>
<%= form_for(@user) do |f| %>
	<%= f.label :username %>
	<%= f.text_field :username %><br />
	<%= f.label :bio %>
	<%= f.text_area :bio %><br />
	<%= f.label :password %>
	<%= f.password_field :password %><br >
	<%= f.submit :create %>
<% end %>

<%= link_to "sign in", login_path %>